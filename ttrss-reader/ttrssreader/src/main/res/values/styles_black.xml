<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Black" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Black</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Black</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Black</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Black</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Black</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_dark</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_dark</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Black</item>
        <!-- Text and Background -->
        <item name="android:textColor">@color/font_color_black</item>
        <item name="android:windowBackground">@color/background_black</item>
        <!-- ListItems -->
        <item name="ListItemText">@style/ListItemText.Black</item>
    </style>

    <style name="ActionBar.Solid.Black" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_solid_dark</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_dark</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_dark</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Black</item>
    </style>

    <style name="PopupMenu.Black" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark</item>
    </style>

    <style name="DropDownListView.Black" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_dark</item>
    </style>

    <style name="ActionBarTabStyle.Black" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_dark</item>
    </style>

    <style name="DropDownNav.Black" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_dark</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_dark</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_dark</item>
    </style>

    <style name="ProgressBar.Black" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_dark</item>
    </style>

    <style name="ActionButton.CloseMode.Black" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_dark</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Black.Widget" parent="@android:style/Widget.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Black</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Black</item>
    </style>

    <style name="ListItemText.Black" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/font_color_black</item>
    </style>

